.carousel-root
  width 100%
  position relative
  box-sizing border-box
  padding 0 20px
  display grid
  grid-template-rows calc(55vh - 100px)
  grid-template-columns 0 2fr 5fr 2fr 0
  grid-column-gap 20px
  align-items center
  justify-items center
  overflow-x hidden
  overflow-y visible

  &.tiny
    grid-template-columns 0 1fr 0

  .placeholder
    width 100%
    height 100%

  @media (max-height 700px)
    height calc(100% - 40px)
    grid-template-rows 1fr
