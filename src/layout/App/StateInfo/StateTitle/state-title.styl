.state-title-root
  display flex
  justify-content center
  align-items center
  flex-wrap wrap
  column-gap 0.25em

  &:after
    content ''
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    opacity 0
    background linear-gradient(to top, var(--background-color) 15%, rgba(0, 0, 0, 0) 85%)
    transition height 1s ease-in-out, opacity 1s ease-in-out

  &.overflowed-y
    pointer-events none

    &:after
      opacity 1
      height calc(100% + 1em)

  &.active
    span
      &.overflowed-x
        min-width 100cqw

  span
    text-align center
    transition transform 1s ease-in-out, min-width 1s ease-in-out
    text-overflow ellipsis
    overflow hidden

    &.overflowed-x
      min-width 100%
