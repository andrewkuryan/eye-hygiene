{
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "module": "ES6",
    "target": "ES6",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@/layout/*": ["./src/layout/*"],
      "@/logic/*": ["./src/logic/*"],
      "@/service": ["./src/service/index.ts"],
      "@/workers/*": ["./src/workers/ports/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
